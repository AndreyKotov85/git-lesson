pl=(int(input('Введите количество тарелок: ')))
sr =(float(input('Введите количесво моющего средства: ')))
while sr > 0 and pl > 0:
    pl -= 1 
    sr -= 0.5 
    print('\nВымыта одна тарелка, еще осталось вымыть: ', pl,
          '\nМоющего средства осталось: ', sr) 
    if pl ==0 and sr ==0: 
          print('\nГотово, все тарелки вымыты, моющее средство закончилось')
    elif pl ==0: 
          print ('\nТарелки закончились, осталось ',sr,' моющего средства')
    elif sr==0:
          print ('\nМоющее средство закончилось, осталось вымыть:' ,pl, 'тарелок')
